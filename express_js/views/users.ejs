<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Users</title>
	<link rel="stylesheet" type="text/css" href="/bootstrap/dist/css/bootstrap.css">
</head>
<body>
	<div class="container">
		<h2>Users</h2>
		<form method="post" action="/users/add">
			<table class="table table-bordered table-striped">
				<tr>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Age</th>
					<th>City</th>
					<th>State</th>
				</tr>
				<% for(var i = 0; i < users.length; i++) { %>
				<tr>
					<td> 
						<a href="/users/<%=users[i].id%>">
							<%= users[i].first_name %> 
						</a>
					</td>
					<td> <%= users[i].last_name %> </td>
					<td> <%= users[i].age %> </td>
					<td> <%= users[i].city %> </td>
					<td> <%= users[i].state %> </td>
				</tr>
				<%}%>
				<tr class="add_user">
					<td>
						<input type="text" name="first_name" placeholder="First Name">
					</td>
					<td>
						<input type="text" name="last_name" placeholder="Last Name">
					</td>
					<td>
						<input type="text" name="age" placeholder="Age">
					</td>
					<td>
						<input type="text" name="city" placeholder="City">
					</td>
					<td>
						<input type="text" name="state" placeholder="State">
					</td>
				</tr>
			</table>
			<button type="submit" class="btn btn-success add_user"> SAVE </button>
			<button id="cancel_add_user" type="button" class="btn btn-warning add_user"> CANCEL
			</button>
		</form>

		<button class="btn btn-info" id="show_add_user">ADD</button>

	</div>
	<script type="text/javascript" src="/jquery/dist/jquery.min.js"></script>
	<script type="text/javascript" src="/bootstrap/dist/js/bootstrap.min.js"></script>
	<script type="text/javascript">
		$(document).ready(function() {
			$(".add_user").hide();
		});

		$("#show_add_user").click(function() {
			$(".add_user").show();
			$("#show_add_user").hide();
		});

		$("#cancel_add_user").click(function() {
			$(".add_user").hide();
			$("#show_add_user").show();
		});

	</script>
</body>
</html>